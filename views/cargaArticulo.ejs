        <script>
            function addColor(){
                var objColores = document.getElementById("container-colores");
                objColores.innerHTML += '<input type="color" class="color-elegido">';
            }

            function borrarColores(){
                var arrColores = document.getElementsByClassName("color-elegido");
                for (let index = 0; index <= arrColores.length; index++) {
                    arrColores[index].remove();
                    if(index < arrColores.length){
                        index = index - 1;
                    }
                }

            }

            function elegirTalle(id){
                if(document.getElementById(id).className == "boton-talle"){
                    document.getElementById(id).className = "boton-talle-elegido";
                }else{
                    document.getElementById(id).className = "boton-talle";
                }
            }
        </script>

