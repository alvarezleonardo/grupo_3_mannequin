<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %>
<body>
   <div class="container-fluid">
		<%- include('./partials/header.ejs') %>

		<script>
			function seleccionarColor(id,rutaImagen,color){
				document.getElementById('foto'+id).src=rutaImagen;
				document.getElementById('elegido'+id).value=color;
				document.getElementById('nombreElegido'+id).innerHTML="Color elegido: "+color;
			}

			function cantidad(id,operacion){
				var objCantidad = document.getElementById('cantidadElegido'+id);
				if(operacion ==='sumar'){
					objCantidad.value++;
				}else{
					if(objCantidad.value>1){
						objCantidad.value--;
					}
				}
			}

			function favoritos(id){
				var objFavorito = document.getElementById('favorito'+id);
				if(objFavorito.value == 1){
					objFavorito.className ="heart-carrito far fa-heart";
					objFavorito.value = 0;
				}else{
					objFavorito.className ="heart-carrito fas fa-heart";
					objFavorito.value = 1;
				}
			}

			function borrar(id){
				var objArticulo = document.getElementById(id);
				objArticulo.remove();
			}
		</script>

		<div class="container">
         <div class="row">
            <div class="col-8"> 
					<% for(let i = 1; i < 5 ; i++){ %>
               <div class="articulo" id="<%= i %>">
                  <div class="row">
                     <div class="col-4">
                        <img class="foto-item-carrito" src="http://www.alx-camisetas.com/s/cc_images/cache_2451715654.jpg" alt="" id="foto<%= i %>">
                     </div>
                     <div class="col-8">
								<h5>Remera algodon</h5>
								<h4>$27</h4>
								<p id="nombreElegido<%= i %>" class="color-elegido">Color elegido:</p>
								<button class="boton-slector-color" style="background-color: black;" onmouseover="seleccionarColor('<%= i %>','http://www.alx-camisetas.com/s/cc_images/cache_2451715654.jpg','negro')"></button>
								<button class="boton-slector-color" style="background-color: white;" onmouseover="seleccionarColor('<%= i %>','http://www.alx-camisetas.com/s/cc_images/cache_2451715637.jpg','blanco')"></button>
								<button class="boton-slector-color" style="background-color: red;" onmouseover="seleccionarColor('<%= i %>','http://www.alx-camisetas.com/s/cc_images/cache_2451715642.jpg','rojo')"></button>
								<button class="boton-slector-color" style="background-color: yellow;" onmouseover="seleccionarColor('<%= i %>','http://www.alx-camisetas.com/s/cc_images/cache_2451715653.jpg','amarillo')"></button>
								<button class="boton-slector-color" style="background-color: green;" onmouseover="seleccionarColor('<%= i %>','http://www.alx-camisetas.com/s/cc_images/cache_2451715641.jpg','verde')"></button>
								<button class="boton-slector-color" style="background-color: orangered;" onmouseover="seleccionarColor('<%= i %>','http://www.alx-camisetas.com/s/cc_images/cache_2451715648.jpg','naranja')"></button>
								<input type="hidden" value="" id="elegido<%= i %>">
								<p class="color-elegido">Cantidad</p>
								<input type="text" value="1" maxlength="3" class="cantidadCarrito" id="cantidadElegido<%= i %>"/>
								<button onclick="cantidad('<%= i %>','restar')" class="botones-cantidad">-</button>
								<button onclick="cantidad('<%= i %>','sumar')" class="botones-cantidad">+</button><br>
								<button class="trash-carrito fas fa-trash-alt" onclick="borrar('<%= i %>')"></button>
								<button class="heart-carrito far fa-heart" value="0" onclick="favoritos('<%= i %>')" id="favorito<%= i %>"></button>
                    	</div>
                	</div>
					</div>
					<% } %>
				</div>
          	<div class="col-4">
               <div class="check">
                  <div class="row">
                     <div class="col-12">
                        <label for="code-discount">Cupon de descuento</label>
                        <input type="text" name="code-discount" id="code-discount" placeholder="32424249">
                     </div>
                     <div class="col-12">
                        <label for="location">Ubicacion</label><br>
                        <select name="location" id="location">
                           <option value="1">1</option>
                        </select><br>
                        <select name="type" id="type">
                           <option value="1">1</option>
                        </select>
                     </div>
                     <div class="col-12">
                        <label for="">Detalle de orden</label><br>
                        <span>Subtotal</span><br>
                        <span>Descuento</span><br>
                        <span>Total</span><br>
                        <span>$$$$</span><br>
                     </div>
                     <div class="col-12">
                        <div class="row">
                           <div class="col-2">
                              <img src="/images/Mediosdepago/visa.png" alt="Visa">
                           </div>
                           <div class="col-2">
                              <img src="/images/Mediosdepago/mastercard.png" alt="Master Card">
                           </div>
                           <div class="col-2">
                              <img src="/images/Mediosdepago/cabal.png" alt="Tarjeta Cabal">
                           </div>
                           <div class="col-2">
                              <img src="/images/Mediosdepago/american-express.png" alt="American express">
                           </div>
                           <div class="col-2">
                     	      <img src="/images/Mediosdepago/naranja.jpg" alt="Tarjeta Naranja">
                           </div>
                           <div class="col-2">
                              <img src="/images/Mediosdepago/mastercard.png" alt="Maestro">
                           </div>
                        </div>
                     </div>
                  </div>
          		</div>
          	</div>
      	</div>
		</div> 
      <%- include('./partials/footer.ejs') %>
   </div>
	<%- include('./partials/scriptBootstrap.ejs') %>
</body>

</html>