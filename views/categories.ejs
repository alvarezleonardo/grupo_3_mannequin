<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %>

<body>
  <div class="container-fluid">
    <%- include('./partials/header.ejs') %>
    <div class="contenido">
      <div class="container-fluid">
        <div class="row category-home">
          <div class="category-bar">
            <div class="col-xs-0 col-sm-0 col-md-2 col-lg-2 pagBar">
              <%- include('./partials/breadcrumb.ejs') %>
            </div>
            <div class="col-xs-0 col-sm-0 col-md-8 col-lg-8 blank"></div>
            <div class="col-xs-0 col-sm-0 col-md-2 col-lg-2 dropdown">
              <%- include('./partials/dropdown.ejs') %>
            </div>
          </div>
          <div class="container-fluid main-category">
            <div class="col-12 row category-content">
              <div class="col-xs-0 col-sm-0 col-md-2 col-lg-2 nav-categories">
                <%- include('./partials/navCategories.ejs') %>
              </div>
              <div class="container-fluid col-xs-12 col-sm-12 col-md-10 col-lg-10 products-wrapper">
                <%- include('./partials/productsWrapper.ejs') %>

                <% if (pagination.filtered == 0) {%>
                  <%- include('./partials/pagination.ejs') %>
                <% }else if (pagination.filtered == 1){ %>
                  <%- include('./partials/paginationFiltered.ejs') %>
                <% }else{ %>
                  <%- include('./partials/paginationSearch.ejs') %>
                <% }%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer.ejs') %>
    <%- include('./partials/scriptBootstrap.ejs') %>

  </div>
  <script src="js/categories.js"></script>
</body>

</html>