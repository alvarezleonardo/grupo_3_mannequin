<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="container-fluid">
        <%- include('./partials/headerCRUD.ejs') %>
      <div class="contenido">
        <div class="row">
          <div class="col-3"></div>
          <div class="col-6">
            <div class="row">
              <div class="col-10">
                <h5>Productos</h5>
              </div>
              <div class="col-2">
                <form method="GET" action="/crudIndex/product/new">
                  <button>Crear articulo</button>
                </form>
              </div>
            </div>
            <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Accion</th>
                  </tr>
                </thead>
                <tbody>
                    <% for( producto of productos){ %>
                  <tr>
                    <th scope="row"><%= producto.idproducts %></th>
                    <td><%= producto.name %></td>
                    <td>
                        <form method="GET" action="/crudIndex/product/edit/<%= producto.idproducts %>">
                            <button><i class="fas fa-pen-square"></i></button>
                        </form>
                        <form method="POST" action="/crudIndex/product/delete/<%= producto.idproducts %>?_method=DELETE">
                            <button>
                                <i class="fas fa-minus-square"></i>
                            </button>
                        </form>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
          </div>
          <div class="col-3"></div>
        </div>
        <%- include('./partials/scriptBootstrap.ejs') %>
      </div>
    </div>
  </body>

</html>
