<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <div class="container-fluid">
        <%- include('./partials/headerCRUD.ejs') %>
      <div class="contenido">
        <div class="row">
          <div class="col-3"></div>
          <div class="col-6">
              <div class="row">
                <div class="col-12">
                  <form class="form-busqueda" action="/crudIndex/users/search" method='GET' >
                    <input type="search" placeholder="Buscar nombre o apellido o email" aria-label="Search" name="keywords" style="width:90%;">
                    <button type="submit"><i class="fa fa-search"></i></button>
                  </form>
                  <br>
                </div>
              </div>
            <div class="row">
              <div class="col-10">
                <h5>Usuarios</h5>
              </div>
              <div class="col-2">
                <form method="GET" action="/crudIndex/users/new">
                  <button>Crear usuario</button>
                </form>
              </div>
            </div>
            <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Email</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Accion</th>
                  </tr>
                </thead>
                <tbody>
                    <% for( usuario of usuarios){ %>
                  <tr>
                    <th scope="row"><%= usuario.idusers %></th>
                    <td><%= usuario.name %> <%= usuario.lastname %></td>
                    <td><%= usuario.email %></td>
                    <td><%= usuario.admin == 0 ? 'usuario' : 'admin' %></td>
                    <td>
                        <form method="GET" action="/crudIndex/users/edit/<%= usuario.idusers %>">
                            <button><i class="fas fa-pen-square"></i></button>
                        </form>
                        <form method="POST" action="/crudIndex/users/delete/<%= usuario.idusers %>?_method=DELETE">
                            <button>
                                <i class="fas fa-minus-square"></i>
                            </button>
                        </form>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
          </div>
          <div class="col-3"></div>
        </div>
        <%- include('./partials/scriptBootstrap.ejs') %>
      </div>
    </div>
  </body>

</html>
