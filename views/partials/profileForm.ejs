<div class="container-fluid generalProfile">

    <div class="row">

        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <!--Breadcrum-->
            <ul class="breadcrumb">
                <li><a class="linkMenuProfile" href="/">Home</a></li>
                <li><a class="linkMenuProfile" href="#">Profile</a></li>
            </ul>
        </div>

    </div>

    <div class="row d-flex justify-content-center">

        <div class="col-12 col-sm-12 col-md-3 col-lg-3 col-xl-2 menuContainerProfile">
            <!--Menu-->

            <div class="d-flex justify-content-center">
                <ul class="">
                    <li class="listaProfile">
                        <i class="fa fa-user"></i><a class="linkMenuProfile" href="#">Mi perfil</a>
                    </li>
                    <li class="listaProfile">
                        <i class="fas fa-shopping-bag"></i><a class="linkMenuProfile" href="#">Mis compras</a>
                    </li>
                    <li class="listaProfile">
                        <i class="fa fa-wallet"></i><a class="linkMenuProfile" href="#">Billetera</a>
                    </li>
                    <li class="listaProfile">
                        <a class="linkMenuProfile" href="#">Cerrar Sesión</a>
                    </li>
                </ul>

            </div>

        </div>

        <div class="col-12 col-sm-12 col-md-9 col-lg-7 col-xl-6 profileContenedorDerecho">

            <!--Form+profile container-->

            <div class="row">

                <div class="col-12 col-sm-12 col-md-6 col-lg-5 col-xl-5 profileSubContainerIzquierdo">
                    <!--Foto-->
                    <div class="fotoProfilContainer">
                        <img class="imgFotoProfile" src="/images/users/<%= profileToEdit.avatar %>">
                    </div>
                    <!-- <form action="/profile" method="POST" enctype="application/x-www-form-urlencoded">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="validatedCustomFile">
                            <label class="custom-file-label" for="validatedCustomFile">Elige una foto</label>
                        </div>
                    </form> -->
                </div>

                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6r">
                    <!--Form-->

                    <form class="FormProfileContainer" action="/profile/<%= profileToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <!--put-->
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="validatedCustomFile" name="avatar">
                            <label class="custom-file-label" for="validatedCustomFile">Elige una foto</label>
                        </div>
                        <div class="margen">
                            <label for="name">Nombre</label>
                            <input class="casilleroTextoProfile" type="text" id="name" name="name" value="<%= profileToEdit.name %>" required>
                        </div>

                        <div class="margen">
                            <label for="lastname">Apellido</label>
                            <input class="casilleroTextoProfile" type="text" id="lastname" name="lastname"
                                value="<%= profileToEdit.lastname %>" required>
                        </div>

                        <div class="margen">
                            <label for="email">Correo electronico</label>
                            <input class="casilleroTextoProfile" type="email" id="email" name="email"
                                value="<%= profileToEdit.email %>" required readonly>
                        </div>

                        <div class="margen">
                            <label for="password">Contraseña</label>
                            <input class="casilleroTextoProfile" type="password" id="password" name="password" placeholder="ingrese la clave" required>
                        </div>

                        <div class="margen">
                        <label for="date">Fecha de nacimiento</label>
                        <input class="casilleroTextoProfile" type="date" id="date" name="date" min="1930-01-01" max="2020-12-31" value="<%= profileToEdit.date %>">
                        </div>

                        <div>
                            <label for="gender">Género</label>
                            <select name="gender" class="casilleroTextoProfile">
                                <option disabled>Seleccione</option>
                                <option value="1" <%= profileToEdit.gender == "1" ? "selected" : "" %>>Femenino</option>
                                <option value="2" <%= profileToEdit.gender == "2" ? "selected" : "" %>>Masculino</option>
                                <option value="3" <%= profileToEdit.gender == "3" ? "selected" : "" %>>Otro</option>
                            </select>
                        </div>

                        <div class="margen">
                            <label for="name">Dirección</label>
                            <input class="casilleroTextoProfile" type="text" id="street" name="street"
                                placeholder="Calle" value="<%= profileToEdit.street %>">
                            <div class="d-flex justify-content-between">
                                <input class="miniTexto" type="text" id="streetNumber" name="streetNumber"
                                    placeholder="Altura" value="<%= profileToEdit.streetNumber %>">
                                <input class="miniTexto" type="text" id="floor" name="floor" placeholder="Piso" value="<%= profileToEdit.floor %>">
                                <input class="miniTexto" type="text" id="apartment" name="apartment" placeholder="Dpto"  value="<%= profileToEdit.apartment %>">
                                <input class="miniTexto" type="text" id="postalCode" name="postalCode"
                                    placeholder="Codigo Postal"  value="<%= profileToEdit.postalCode %>">
                            </div>
                            <input class="casilleroTextoProfile" type="text" id="city" name="city" placeholder="Ciudad" value="<%= profileToEdit.city %>">
                            <select class="casilleroTextoProfile" name="country" placeholder="Pais">
                                <option disabled>País</option>
                                <% for (let i=0; i<paises.length; i++) { %>
                                <option value="<%=paises[i]%>" <%= profileToEdit.country == paises[i] ? "selected" : "" %>><%=paises[i]%></option>
                                <% } %>
                            </select>
                        </div>

                        <div class="botoneraProfile">
                            <input class="sub" type="submit" value="Actualizar">
                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>